    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="200dp"

        android:layout_gravity="center"
        android:src="@drawable/taichung_001" />


    <include layout="@layout/visit_web" />


</LinearLayout>